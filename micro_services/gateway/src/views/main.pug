extends components/layout.pug

block content
  #main
    head
      title= title
    body
      header#header.label
        div#authorization
          input#email(type='text' name='email' placeholder='Email')
          input#password(type='text' name='password' placeholder='Password')
          button.btn(type='button' onclick='getTokenData()') Войти
        div#registration
          input#regName.field(type='text' name='name' placeholder='Name')
          input#regEmail.field(type='text' name='email' placeholder='Email')
          input#regPassword.field(type='text' name='password' placeholder='Password')
          button.btn(type='submit' onclick='addNewUser()') Регистрация
        div#container  
        div#upload
          form#formElem
            textarea(name="review" id="review" class="textarea" cols="60" rows="5")
            div.label Добавить фото:
            input.btn(type='file' name='multipleFiles' multiple='multiple')
            input.btn(type='submit' value='Оставить отзыв')
        div#chat
          div#add-message
            div.label Добавить сообщение:
            textarea(name="message" id="message" class="textarea" cols="60" rows="5")
            input.btn(type='submit' value='Отправить' id='send-message')
          div#all_mess
          
